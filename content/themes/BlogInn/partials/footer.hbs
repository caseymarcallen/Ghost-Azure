<footer class="site-footer">
	<div class="inner">

		<div class="footer-links">
			{{#if @blog.twitter}}
			<a href="{{twitter_url}}" class="icon-twitter square fill-horizontal"><span class="screen-reader-text">Twitter</span></a>
			{{/if}}
			{{#if @blog.facebook}}
			<a href="{{facebook_url}}" class="icon-facebook square fill-horizontal"><span class="screen-reader-text">Facebook</span></a>
			{{/if}}
			<a href="https://plus.google.com/{{! Add Google+ handle }}" class="icon-google square fill-horizontal"><span class="screen-reader-text">Google+</span></a>
			<a href="https://github.com/{{! Add GitHub handle }}" class="icon-github square fill-horizontal"><span class="screen-reader-text">GitHub</span></a>
			<a href="http://codepen.io/{{! Add CodePen handle }}" class="icon-codepen square fill-horizontal"><span class="screen-reader-text">CodePen</span></a>
			<a href="https://dribbble.com/{{! Add Dribbble handle }}" class="icon-dribbble square fill-horizontal"><span class="screen-reader-text">Dribbble</span></a>
			<a href="https://medium.com/{{! Add Medium handle }}" class="icon-medium square fill-horizontal"><span class="screen-reader-text">Medium</span></a>
			<a href="http://instagram.com/{{! Add Instagram handle }}" class="icon-instagram square fill-horizontal"><span class="screen-reader-text">Instagram</span></a>
			<a href="http://www.pinterest.com/{{! Add Pinterest handle }}" class="icon-pinterest square fill-horizontal"><span class="screen-reader-text">Pinterest</span></a>
			<a href="https://vine.co/{{! Add Vine handle }}" class="icon-vine square fill-horizontal"><span class="screen-reader-text">Vine</span></a>
			<a href="{{@blog.url}}/rss/" class="icon-feed square fill-horizontal"><span class="screen-reader-text">RSS</span></a>
		</div><!-- .footer-links -->

		<div class="site-info">
			&copy; <a href="{{@blog.url}}">{{@blog.title}}</a> all rights reserved. <br />Powered by <a target="_blank" href="http://www.ghost.org">Ghost</a>. BlogInn theme by <a target="_blank" href="http://justgoodthemes.com/">JustGoodThemes</a>
			<a href="#page" class="icon-chevron-up top-link square fill-horizontal" title="Back to Top"><span class="screen-reader-text">Back to the top</span></a>
		</div><!-- .site-info -->

	</div><!-- .inner -->
</footer><!-- .site-footer -->
