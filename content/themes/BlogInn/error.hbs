<!DOCTYPE html>
<html>
<head>
	{{! Document Settings }}
	<meta charset="utf-8">

	<title>{{code}} â€” {{message}}</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link rel="shortcut icon" href="{{asset "/favicon.ico"}}">

	{{! Styles }}
	<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Lato:400,400italic,700,700italic" />
	<link rel="stylesheet" type="text/css" href="{{asset "css/style.css"}}" />
</head>
<body class="{{body_class}} error-404">
	<div id="page" class="site">
		<header class="site-header fadeInDown delay_05s">
			<div class="inner">
				{{#if @blog.logo}}
				<h1 class="site-title"><a href="{{@blog.url}}"><img src="{{@blog.logo}}" /></a></h1>
				{{else}}
				<h1 class="site-title"><a class="logo-text" href="{{@blog.url}}">{{@blog.title}}</a></h1>
				{{/if}}
				{{#if @blog.description}}
				<p class="site-description">{{@blog.description}}</p>
				{{/if}}
			</div><!-- .inner -->
		</header><!-- .site-header -->
		<main class="site-main">
			<section class="inner">
				<div class="site-content fadeInDown delay_075s">
					<div class="not-found">
						<header class="entry-header">
							<div class="entry-header-wrap">
								<div class="post-thumbnail"><img src="{{asset "images/404.jpg"}}" alt="{{title}}"></div>
								<h1 class="entry-title">404: Page Not Found</h1>
							</div>
						</header><!-- .entry-header -->
						<div class="entry-content">
							<p>Apologies, but the page you requested could not be found. <br /><a class="error-link" href="{{@blog.url}}">Go to the front page &rarr;</a></p>
						</div><!-- .entry-content -->
					</div><!-- .not-found -->
				</div><!-- .site-content -->
			</section><!-- .inner -->
		</main><!-- .site-main -->
	</div><!-- #page -->
</body>
</html>
